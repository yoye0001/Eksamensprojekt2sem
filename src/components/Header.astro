/*navigationsbar*/
.navbar {
  min-height: 70px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1.5rem;
  background: var(--header-gradient);
}
header{
    border-bottom: var(--body-contrast) solid 1px;
}
/*menuknapperne i navigationsbar*/
.nav-menu {
  display: flex;
  justify-content: space-around;
  gap: 2rem; 
list-style: none;

}
.nav-link,p{
    color: var(--body-contrast);
    text-decoration: none;
    font-family: montserrat, sans-serif;
transition: var(--unfocus);
