const { header, underknap1, underknap2 } = Astro.props;
---

<li class="nav-item dropdown">
  <div class="dropbtn">
    <a href="/#type"> 
      <div class="headtitle">{header}</div>
    </a>
    <div class="icon"></div>
     </div>
    <div class="dropdown-content">
      <a href="/designs?type=Stage">
        <div class="dropdownbtn">{underknap1}</div>
