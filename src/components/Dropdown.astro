    hr {
      width: 3rem;
    }
    .icon {
      background-image: url(/arrowdown.svg);
      color: transparent;
      background-size: contain;
      background-repeat: no-repeat;
      width: 2rem;
      margin-top: 0.5rem;
      margin-left: 1rem;
      padding: 0.5rem;
    }
    .icon:hover, li:hover .icon{
      margin-top: 0.6rem;
   transition: var(--focus);
  }
    
    /* Dropdown Button */
    .dropbtn {
      text-align: right;
      display: flex;
      align-self: center;
      flex-direction: row-reverse;
      gap: 0.5rem;
      color: var(--body-contrast);
      cursor: pointer;
      font-family: "Montserrat", sans-serif;
      font-weight: 400;
      font-style: normal;
      font-size: 1.5rem;
      background: transparent;
    }

    a {
      text-decoration: none;
      color: var(--body-contrast);
    }
    /* Links inside the dropdown */
    .dropdown-content div {
      display: flex;
      flex-direction: column;
      align-items: self-end;
      text-align: right;
      margin: 1rem 1rem;
      margin-bottom: 1rem;
      padding-top: 0.5rem;
      text-decoration: none;
      font-family: "Montserrat", sans-serif;
      font-size: 1rem;
      transition: 0.2s ease-in-out;
    }
    .dropdownbtn:hover, .headtitle:hover, .active {
      color: var(--secondary);
    }
    .dropdown {
      transition: 0.2s ease-in-out;
    }
    /* Dropdown Content (Hidden by Default) */
    .dropdown-content {
      /* margin-top: 2.6rem; */
      display: none;
      transition: 0.3s ease-in-out;
      border: 1px solid var(--body-contrast);
    }

    /* Change the background color of the dropdown button when the dropdown content is shown */

    /* Show the dropdown menu on active */
    .show {
      display: block;
    }
    /* KUN PÅ MOBIL */
    @media (max-width: 900px) {
      .dropbtn{
        border-bottom: 1px solid var(--body-contrast);
        padding-bottom: 1.5rem;
      }
      .dropdown-content  {
     display: block;
     border: none;
    }
    .dropdown-content div {
      margin-right: 0;
    }
    }
    /* KUN PÅ DESK */
        @media (min-width: 900px) {
      .icon{
        margin-top: 0.2rem;
        transition: var(--unfocus);
      }
      .icon:hover, li:hover .icon{
        margin-top: 0.4rem;
        transition: var(--focus);
      }
      li .dropbtn .headtitle {
      border-bottom: solid transparent 1.5px;
    }
    li .dropbtn:hover .headtitle, .active {
      color: var(--body-contrast);
      border-bottom: solid var(--body-contrast) 1.5px;
      animation: border_anim 0.3s ease-in-out forwards;
    }
      /* The container <div> - needed to position the dropdown content */
      .dropdown {
        position: relative;
        display: inline-block;
        transition: 0.2s ease-in-out;
      }

      .dropbtn {
        font-size: 1rem;
        max-width: 130px;
        border-bottom: none;

      }

      /* Dropdown Content (Hidden by Default) */
      .dropdown-content {
        display: none;
        position: absolute;
        background: var(--footer-gradient);
        min-width: 190px;
        height: 200px;
       right: 0;
        z-index: 250;
        top: 1.25rem;
      }

      /* Show the dropdown menu on hover */
      .dropdown:hover .dropdown-content {
        display: block;
      }
    
    }
  </style>

