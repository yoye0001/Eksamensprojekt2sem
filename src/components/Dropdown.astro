---
import "../styles/generel.css";
import "../styles/animations.css";
const { header, underknap1, underknap2 } = Astro.props;
---

<div class="dropbtn"> <div>{header}</div> <div class="icon"></div>
<div class="dropdown-content">
  <a href="#">{underknap1}</a>
  <a href="#">{underknap2}</a>
</div>

<style>
    .icon{
        background-image: url(/arrowdown.svg);
    color: transparent;
    background-size: contain;
    background-repeat: no-repeat;
    width: 1.5rem;
    margin-top: 0.6rem;
    margin-left: 1rem;
    }
    /* Dropdown Button */
    .dropbtn {
    text-align: right;
    display: flex;
    align-self: center;
    justify-content: right;
    flex-direction: row-reverse;
    gap: 0.5rem;
    color: var(--body-contrast);
    cursor: pointer;
    font-family: "Montserrat", sans-serif;
    font-weight: 400;
    font-style: normal;
    font-size: 1.5rem;
background: transparent;
  }

  .dropbtwn:first-child {
    max-width: 200px;
    text-align: left;
  }
  a {
    text-decoration: none;
  }
  /* Links inside the dropdown */
  .dropdown-content div {
    display: flex;
    justify-content: space-between;
    color: var(--text-color);
    margin: 12px 16px;
    margin-bottom: 1.2rem;
    padding-top: 0.2rem;
    text-decoration: none;
    font-family: "Raleway", sans-serif;
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: normal;
    font-size: 1rem;
    transition: 0.2s ease-in-out;
  }
  .dropdown {
    transition: 0.2s ease-in-out;
  }
  /* Dropdown Content (Hidden by Default) */
  .dropdown-content {
    display: none;
    transition: 0.3s ease-in-out;
  }

   /* Change the background color of the dropdown button when the dropdown content is shown */
   .dropdown:hover .dropbtn{
    border-bottom: 1px solid var(--text-color) ;
    transition: 0.2s ease-in-out;
  }

    /* Show the dropdown menu on active */
    .show{
       display: block;
  }
  @media (min-width: 700px) {
    /* The container <div> - needed to position the dropdown content */
    .dropdown {
      position: relative;
      display: inline-block;
      transition: 0.2s ease-in-out;
    }
  
    .dropbtn {
      font-size: 1rem;
      max-width: 130px;
      border-bottom: none;
    }

  /* Dropdown Content (Hidden by Default) */
  .dropdown-content {
    display: none;
    position: absolute;
    background-color:#00031cc4;
    min-width: 200px;
    z-index: 1;

    border-radius: 0px 0px 7px 7px;
    -webkit-border-radius: 0px 0px 7px 7px;
    -moz-border-radius: 0px 0px 7px 7px;
  }

 
  .dropdown-content div:hover{
    transition: 0.2s ease-in-out;
    border-bottom: 1px solid var(--text-color);
  }

  /* Show the dropdown menu on hover */
  .dropdown:hover .dropdown-content {
    display: block;
  }
   /* Change the background color of the dropdown button when the dropdown content is shown */
   .dropdown:hover .dropbtn, .dropdown .dropbtn .active {
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--text-color) ;
    transition: 0.2s ease-in-out;
  }
  }
</style>

<script>
   // click dropdown and it stays in mobil

const dropbtns = document.querySelectorAll(".dropbtn");
const dropdowncontent = document.querySelectorAll(".dropdown-content");

dropbtns.forEach(btn => {
    btn.addEventListener("click", btnKlik);
});

function btnKlik(evt) {
    const dropdown = evt.currentTarget.nextElementSibling;
    dropdown.classList.toggle("show");
}
  </script>